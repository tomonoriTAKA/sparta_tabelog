<div class="col-md-8">
  <% @restaurants.each do |restaurant| %>
    <div class="article">
      <h2>名前：<%= restaurant.name %></h2>
      <p>電話番号：<%= restaurant.tel %></p>
      <p>作成日：<%= restaurant.created_at %></p>
      <p><%= link_to "詳細", restaurant, class: "btn btn-default" %></p>
    </div>
  <% end %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <%= image_tag User.first.image_url, alt: "著者イメージ" %>
    <div class="caption">
      <h3>著者名：<%= User.first.name %></h3>
      <p>詳細：<%= User.first.description %></p>
      <p>TEL：<%= User.first.tel %></p>
      <p>EMAIL：<%= User.first.email %></p>

    </div>
  </div>
  <div class="list-group">
    <% @restaurants.each_with_index do |restaurant, index| %>
    <% if index >= 5
         break
       end
    %>
    <%= link_to restaurant.name, restaurant, class: "list-group-item" %>
    <% end %>
  </div>
</div>
